{
    "formatter": {
        "indentSize": 4,
        "useTabs": false,
        "lineWidth": 100
    },
    "linter": {
        "javascript": {
            "rules": {
                "no-unused-vars": "warn",
                "no-console": "warn",
                "semi": ["error", "always"],
                "quotes": ["error", "single"],
                "indent": ["error", 4],
                "max-len": ["warn", { "code": 100 }]
            }
        },
        "html": {
            "rules": {
                "indent": ["error", 4],
                "max-len": ["warn", { "code": 100 }]
            }
        }
    },
    "editor": {
        "formatOnSave": true,
        "formatOnPaste": true,
        "trimTrailingWhitespace": true,
        "insertFinalNewline": true
    }
} 